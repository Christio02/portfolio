---
import Layout from '../layouts/Layout.astro';
import UnityGame from '../components/UnityGame';
---

<Layout title="Flappy Game - Christopher HÃ¸e">
	<div class="game-container">
		<h1 class="mb-6 text-3xl font-bold">Flappy Game</h1>
		<p class="mb-4">Play my Unity game right in your browser!</p>

		<div class="game-wrapper mb-8 rounded-lg bg-gray-100 p-4 dark:bg-gray-800">
			<UnityGame client:only="react" />
		</div>

		<div class="game-instructions mt-8">
			<h2 class="mb-4 text-2xl font-bold">How to Play</h2>
			<ul class="list-disc space-y-2 pl-5">
				<li>Click or tap to make the bird flap its wings</li>
				<li>Navigate through the pipes without hitting them</li>
				<li>Try to get the highest score possible!</li>
			</ul>
		</div>
	</div>
</Layout>

<style>
	.game-container {
		max-width: 900px;
		margin: 0 auto;
	}

	.game-wrapper {
		box-shadow:
			0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}
</style>
